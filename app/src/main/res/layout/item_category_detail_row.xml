<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Category Image Placeholder -->
        <ImageView
            android:id="@+id/iv_category_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FF9800"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <!-- Category Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tv_category_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qty: 50"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_category_profit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Profit: $500.00"
                    android:textSize="14sp"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_category_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25.5% of sales"
                android:textSize="12sp"
                android:textColor="#FF9800" />

        </LinearLayout>

        <!-- Sales Amount -->
        <TextView
            android:id="@+id/tv_category_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2,500.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginStart="16dp"
            android:gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
