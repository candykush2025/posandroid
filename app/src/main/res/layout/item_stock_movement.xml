<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="12dp">

    <!-- Movement Type and Quantity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_movement_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sale"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:minWidth="60dp"
            android:gravity="end" />

    </LinearLayout>

    <!-- Stock Before/After -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_stock_before"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Before: 10"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tv_stock_after"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="After: 15"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="end" />

    </LinearLayout>

    <!-- Reason -->
    <TextView
        android:id="@+id/tv_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sale transaction"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="4dp" />

    <!-- User and Timestamp -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="By: John Doe"
            android:textSize="12sp"
            android:textColor="#777777" />

        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 10, 14:25"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
