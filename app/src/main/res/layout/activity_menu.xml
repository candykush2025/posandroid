<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <!-- Content Container - Centered -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POS Candy Kush"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="16dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Application Mode"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginBottom="48dp" />

        <!-- Buttons Container -->
        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Admin Button -->
            <Button
                android:id="@+id/btn_admin"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Admin Dashboard"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="#1976D2"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- POS Button -->
            <Button
                android:id="@+id/btn_pos"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="POS Terminal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="#2E7D32"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Printer Settings Button -->
            <Button
                android:id="@+id/btn_printer_settings"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Printer Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="#FF9800"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Check Updates Button -->
            <Button
                android:id="@+id/btn_check_updates"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Check for Updates"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="#9C27B0"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Info Text -->
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Admin: For mobile dashboard and management\nPOS: For tablet point-of-sale operations\nPrinter: Configure and reset printer settings\nUpdates: Check for latest app version"
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginTop="32dp" />

    </LinearLayout>

    <!-- Version Text -->
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Version: 1.0.0"
        android:textSize="12sp"
        android:textColor="#AAAAAA" />

</RelativeLayout>
