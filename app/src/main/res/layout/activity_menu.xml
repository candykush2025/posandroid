<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_black"
        android:scaleType="fitCenter"
        android:contentDescription="App Logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <!-- Content Container - Centered -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Application Mode"
            android:textSize="18sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="16dp" />

        <!-- Buttons Container -->
        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Admin Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_admin"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icon_users"
                        android:contentDescription="Users Icon"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admin Dashboard"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile dashboard &amp; management"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/poppins" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- POS Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pos"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icon_tablet"
                        android:contentDescription="Tablet Icon"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POS Terminal"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Centralized sales management"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/poppins" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Icon Buttons Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Printer Settings Icon Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_printer"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#000000">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_settings"
                        android:contentDescription="Printer Settings"
                        android:padding="12dp"
                        android:scaleType="fitCenter" />

                </androidx.cardview.widget.CardView>

                <!-- Check Updates Icon Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_updates"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#000000">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_update"
                        android:contentDescription="Check Updates"
                        android:padding="12dp"
                        android:scaleType="fitCenter" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Logo -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="155dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_logo_text"
        android:contentDescription="Logo"
        android:layout_above="@id/tv_tagline"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tv_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One platform, total control of your business"
        android:textSize="14sp"
        android:textColor="#666666"
        android:fontFamily="@font/poppins"
        android:layout_above="@id/tv_version"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <!-- Version Text -->
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Version: 1.0.0"
        android:textSize="12sp"
        android:fontFamily="@font/poppins"
        android:textColor="#AAAAAA" />

</RelativeLayout>
